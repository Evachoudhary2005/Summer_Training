#include<iostream>
using namespace std;
int BS(int arr[], int x, int l, int h){
    while(l<=h){
        int m = l + ((h - l) / 2);
        if(x==arr[m]){
            return m;
        } else if(x> arr[m]) {
            l = m + 1;
        } else{
            h = m - 1;
        }
    }
}
int main() {
    int arr[]={1,2,3,4,5,6,7,8,9};
    int x;
    cout<<"Enter your Choice:- ";
    cin>>x;
    int n= sizeof(arr)/sizeof(arr[0]);
    int a= BS(arr,x,0,n-1);
    if(a==-1){
        cout<<"Invalid Entry!";
    }
    else{
        cout<<"Element Found!!"<<endl;
        cout<<"At Index:-["<<a<<"]";
    }
}
