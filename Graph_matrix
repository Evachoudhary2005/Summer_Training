#include <iostream>
#include <vector>
using namespace std;
class Matrix {
private:
    int v;
    vector<vector<int>> adjMatrix;
public:
    Matrix(int x) : v(x) {
        adjMatrix.resize(v, vector<int>(v, 0));
    }
    void add(int u, int w) {
             adjMatrix[u - 1][w - 1] = 1;
    }
    void disp() {
        cout << "Adjacency Matrix: " << endl;
        for (int i = 0; i < v; ++i) {
            for (int j = 0; j < v; ++j) {
                cout << adjMatrix[i][j] << " ";
            }
            cout << endl;
        }
    }
};
int main() {
    Matrix m(6);
    m.add(1, 2);
    m.add(1, 3);
    m.add(2, 1);
    m.add(2, 4);
    m.add(2, 6);
    m.add(3, 1);
    m.add(3, 4);
    m.add(3, 5);
    m.add(4, 2);
    m.add(4, 3);
    m.add(5, 3);
    m.disp();  
    return 0;
}
