#include <iostream>
using namespace std;
int main() {
    char operation;
    double num1, num2, result;
    cout << "Select an operation: " << endl;
    cout << "A. Addition (+)" << endl;
    cout << "B. Subtraction (-)" << endl;
    cout << "C. Multiplication (*)" << endl;
    cout << "D. Division (/)" << endl;
    cout << "Enter operation (A, B, C, D): ";
    cin >> operation;
    cout << "Enter first number: ";
    cin >> num1;
    cout << "Enter second number: ";
    cin >> num2;
    switch (operation) {
    case 'A':
    case 'a':
        result = num1 + num2;
        cout << "Result: " << num1 << " + " << num2 << " = " << result << endl;
        break;
    case 'B':
    case 'b':
        result = num1 - num2;
        cout << "Result: " << num1 << " - " << num2 << " = " << result << endl;
        break;
    case 'C':
    case 'c':
        result = num1 * num2;
        cout << "Result: " << num1 << " * " << num2 << " = " << result << endl;
        break;
    case 'D':
    case 'd':
        if (num2 != 0) {
            result = num1 / num2;
            cout << "Result: " << num1 << " / " << num2 << " = " << result << endl;
        } else {
            cout << "Error: Division by zero!" << endl;
        }
        break;
    default:
        cout << "Invalid operation!" << endl;
        break;
    }
    return 0;
}
