#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;
int main() {
    int a = 1, b = 55;
    cout << "First element before swapping: " << a << endl;
    cout << "Second element before swapping: " << b << endl;
    cout << "*-------------------------------------------*" << endl;
    swap(a, b);
    cout << "First element after swapping: " << a << endl;
    cout << "Second element after swapping: " << b << endl;
    vector<int> v1 = {1, 2, 3};
    vector<int> v2 = {4, 5, 6};
    vector<int> v3(6);
    vector<int> v4 = v1;
    vector<int> v5 = v2;
    vector<int> v6 = v1;
    vector<int> v7 = v2;
    cout << endl << "Before: " << endl;
    for (int n : v1) {
        cout << n << " ";
    }
    cout << endl;
    for (int n : v2) {
        cout << n << " ";
    }
    cout << endl;
    // merging the two vectors
    merge(v1.begin(), v1.end(), v2.begin(), v2.end(), v3.begin());
    cout << endl << "After merging: " << endl;
    for (int n : v3) {
        cout << n << " ";
    }
    cout << endl;
    // Replace elements
    replace(v1.begin(), v1.end(), 2, 5);
    replace(v2.begin(), v2.end(), 5, 7);
    cout << endl << "After replacing: " << endl;
    for (int n : v1) {
        cout << n << " ";
    }
    cout << endl;
    for (int n : v2) {
        cout << n << " ";
    }
    cout << endl;
    // Removing elements
    v1.erase(remove(v1.begin(), v1.end(), 2), v1.end());
    v2.erase(remove(v2.begin(), v2.end(), 5), v2.end());
    cout << endl << "After removing: " << endl;
    for (int n : v1) {
        cout << n << " ";
    }
    cout << endl;
    for (int n : v2) {
        cout << n << " ";
    }
    cout << endl;
    // Erase
    v1.erase(remove(v1.begin(), v1.end(), 2), v1.end());
    v2.erase(remove(v2.begin(), v2.end(), 5), v2.end());
    cout << endl << "After erasing: " << endl;
    for (int n : v1) {
        cout << n << " ";
    }
    cout << endl;
    for (int n : v2) {
        cout << n << " ";
    }
    cout << endl;
}
