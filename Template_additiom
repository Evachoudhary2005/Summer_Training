#include <iostream>
using namespace std;

template <typename T>
T add(T a, T b) {
    return a + b;
}

int main() {
    // Numbers
    int x = 5, y = 10;
    cout << "Sum of numbers: " << add(x, y) << endl;

    // Characters (adds ASCII values)
    char c1 = 'A', c2 = 'B';
    cout << "Sum of characters (ASCII): " << int(add(c1, c2)) << endl;

    // Strings
    string s1 = "Good", s2 = "Morning";
    cout << "Concatenated strings: " << add(s1, s2) << endl;

    return 0;
}
