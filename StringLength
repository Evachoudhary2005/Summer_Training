#include<iostream>
#include<string.h>
using namespace std;
int main() {
    string str = "Pneumonoultramicroscopicsilicovolcanoconiosis";
    cout << "Using size(): " << str.size() << endl;
    cout << "Using length(): " << str.length() << endl;
    cout << "Using strlen(): " << strlen(str.c_str()) << endl;
    cout << "String: " << str << endl;
    return 0;
}
